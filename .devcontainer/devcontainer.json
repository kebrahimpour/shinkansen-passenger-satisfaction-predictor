{
    "name": "Shinkansen ML Development",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "features": {
        "ghcr.io/devcontainers/features/node:1": {},
        "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    },
    "postCreateCommand": "curl -LsSf https://astral.sh/uv/install.sh | sh && export PATH=\"$HOME/.local/bin:$PATH\" && uv sync --extra dev",
    "customizations": {
        "vscode": {
            "settings": {},
            "extensions": [
                "ms-python.python",
                "ms-python.flake8",
                "ms-python.pylint",
                "ms-python.black-formatter",
                "ms-toolsai.jupyter",
                "ms-vscode.vscode-json"
            ]
        }
    },
    "mounts": [
        "source=${localEnv:SHINKANSEN_DATA_PATH:/tmp/shinkansen-data},target=/workspaces/shinkansen-passenger-satisfaction-predictor/data,type=bind"
    ],
    "containerEnv": {
        "DATA_PATH": "/workspaces/shinkansen-passenger-satisfaction-predictor/data"
    }
}
