{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI Debug",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "shinkansen_predictor.api:app",
        "--host", "127.0.0.1",
        "--port", "8000",
        "--reload"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "console": "integratedTerminal",
      "python": "${workspaceFolder}/.venv/bin/python",
      "cwd": "${workspaceFolder}",
      "justMyCode": false,
      "stopOnEntry": false,
      "autoReload": {
        "enable": true
      }
    },
    {
      "name": "FastAPI Debug (Alternative)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/shinkansen_predictor/api.py",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "console": "integratedTerminal",
      "python": "${workspaceFolder}/.venv/bin/python",
      "cwd": "${workspaceFolder}",
      "justMyCode": false,
      "stopOnEntry": false
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "python": "${workspaceFolder}/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "cwd": "${workspaceFolder}",
      "justMyCode": true
    }
  ]
}
